<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="720dp"
    android:orientation="vertical"
    tools:context=".Fragments.MenuFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCoffee"
                style="@style/TextViewMenu"
                android:text="@string/coffee"
                android:onClick="tvClick"/>

            <TextView
                android:id="@+id/tvTea"
                style="@style/TextViewMenu"
                android:text="@string/tea" />

            <TextView
                android:id="@+id/tvDesserts"
                style="@style/TextViewMenu"
                android:text="@string/desserts" />

            <TextView
                android:id="@+id/tvSandwiches"
                style="@style/TextViewMenu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/sandwiches" />


        </LinearLayout>
    </ScrollView>

    <!-- Coffee Menu -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleCoffee"
                style="@style/TextViewCategory"
                android:layout_marginTop="15dp"
                android:text="@string/coffee" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coffeeRecyclerView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Tea Menu -->
            <TextView
                android:id="@+id/titleTea"
                style="@style/TextViewCategory"
                android:text="@string/tea" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/teaRecyclerView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Dessert Menu -->
            <TextView
                android:id="@+id/titleDesserts"
                style="@style/TextViewCategory"
                android:text="@string/desserts" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dessertRecyclerView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Sandwich Menu -->
            <TextView
                android:id="@+id/titleSandwiches"
                style="@style/TextViewCategory"
                android:text="@string/sandwiches" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sandwichRecyclerView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>