<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeVibe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ButtonAccount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#FFA500</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ImageStyle_Circle">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item> <!--possible values are rounded, cut-->
    </style>

    <style name="AccountItems">
        <item name="android:backgroundTint">#00FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:drawableRight">@drawable/baseline_arrow_forward_ios_24</item>
    </style>

    <style name="TextViewSettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="TextViewCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextViewMenu">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">tvClick</item>
    </style>

    <style name="TextViewOrderCategory">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="TextViewOrder">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.CoffeeVibe" parent="Base.Theme.CoffeeVibe" />

</resources>